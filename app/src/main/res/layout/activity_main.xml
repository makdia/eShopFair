<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/colorWhite">
            <LinearLayout
                android:id="@+id/layout1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorDarkTeal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Welcome to Electra Int'I"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:weightSum="1"
                android:layout_below="@+id/layout1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="0.35"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorDarkTeal"
                    android:weightSum="1"
                    android:clickable="true"
                    android:onClick="UnderProcess">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.30"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/neworder" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="New Order"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:paddingBottom="35dp"
                        android:layout_weight="0.70"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:weightSum="1"
                    android:layout_weight="0.65">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="75dp"
                        android:layout_weight="0.50"
                        android:text="Under Process"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:background="@color/colorLightYellow"
                        android:clickable="true"
                        android:onClick="UnderProcess"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="75dp"
                        android:layout_weight="0.50"
                        android:text="Completed"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:background="@color/colorLightYellow"
                        android:clickable="true"
                        android:onClick="UnderProcess"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout3"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/layout2"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:layout_weight="0.35"
                    android:weightSum="1"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorDarkTeal"
                    android:clickable="true"
                    android:onClick="UnderProcess">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_weight="0.50"
                        android:text="Revenue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_weight="0.50"
                        android:text="BDT3000 till today"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:padding="5dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_weight="0.65"
                    android:text="Cancelled 5%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@color/colorLightYellow"
                    android:clickable="true"
                    android:onClick="UnderProcess"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout4"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/layout3"
                android:weightSum="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.50"
                    android:weightSum="1"
                    android:background="@color/colorLightYellow"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:onClick="stockAndPrice">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.20"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/stock" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="90dp"
                        android:text="Stock &amp; Price"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textAlignment="viewStart"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_weight="0.80"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="0.50"
                    android:weightSum="1">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_weight="0.50"
                        android:weightSum="1"
                        android:background="@color/colorLightYellow"
                        android:clickable="true"
                        android:onClick="UnderProcess">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="0.20"
                            android:padding="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/storediscount" />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="90dp"
                            android:layout_weight="0.80"
                            android:text="Store Discount"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textAlignment="viewStart"
                            android:gravity="center"
                            android:padding="5dp"
                            tools:ignore="RtlCompat"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@+id/layout4"
                android:background="@color/colorDarkTeal"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:gravity="center"
                android:clickable="true"
                android:onClick="addProduct">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_weight="0.50"
                    android:paddingLeft="85dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/addproduct"
                    android:clickable="true"
                    android:onClick="addProduct"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:clickable="true"
                    android:onClick="addProduct"
                    android:text="Add Product"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:textAlignment="viewStart"
                    android:layout_gravity="center"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout6"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/layout5"
                android:background="@color/colorDarkTeal"
                android:clickable="true"
                android:onClick="UnderProcess">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Merchant Rating and Ranking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
