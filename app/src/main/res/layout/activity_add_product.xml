<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#fff"
tools:context="com.photoeditorsdk.android.app.AddProductActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView01"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/nameicon" />
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:prompt="@color/colorWhite"
                    android:dropDownSelector="@color/colorAccentLight"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_border_edittext" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/nameicon" />
                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left"
                    android:hint="Please put a name here"
                    android:padding="15dp"
                    android:textColorHint="@color/colorGray"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/descriptionicon" />
                <EditText
                    android:gravity="left"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"
                    android:textColorHint="@color/colorGray"
                    android:textColor="#000000"
                    android:id="@+id/edit_description"
                    android:hint="Details, Model, Color, Size, Warranty, Weight &amp; Other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/price" />
                <EditText
                    android:gravity="left"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/edit_price"
                    android:hint="Customer Price e.g. 5590, 495, 10550 etc"
                    android:padding="15dp"
                    android:textColorHint="@color/colorGray"
                    android:textColor="#000000"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/baseprice" />

                <EditText
                    android:gravity="left"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/edit_commission"
                    android:hint="Your desired amount"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:padding="15dp"
                    android:textColorHint="@color/colorGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/discount"
                    android:layout_gravity="center"
                    />
                <EditText
                    android:gravity="left"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/edit_discount"
                    android:hint="If 5%, put just 5 or any number"
                    android:padding="15dp"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/colorGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/quantity"
                    android:layout_gravity="center"
                    />
                <EditText
                    android:gravity="left"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/edit_quantity"
                    android:hint="10, 20, 30 etc"
                    android:padding="15dp"
                    android:digits="0123456789"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/colorGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:padding="10dp"
                android:text="Select Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.025"
                android:textColor="@color/colorAccentLight"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <RelativeLayout
                    android:id="@+id/lay_1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.33">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/product_pic1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/productpic1"
                        android:clickable="true"
                        android:onClick="pickImage1"
                        app:civ_border_color="@color/colorAccentLight"
                        app:civ_border_width="2dp" />
                    <Button
                        android:id="@+id/btnChoose1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="75dp"
                        android:textStyle="bold"
                        android:background="@drawable/capturepic"
                        android:clickable="true"
                        android:onClick="pickImage1"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lay_2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.33">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/product_pic2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/productpic1"
                        app:civ_border_color="@color/colorAccentLight"
                        app:civ_border_width="2dp"
                        android:clickable="true"
                        android:onClick="pickImage2"/>
                    <Button
                        android:id="@+id/btnChoose2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="75dp"
                        android:textStyle="bold"
                        android:background="@drawable/capturepic"
                        android:clickable="true"
                        android:onClick="pickImage2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lay_3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.33">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/product_pic3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/productpic1"
                        app:civ_border_color="@color/colorAccentLight"
                        app:civ_border_width="2dp"
                        android:clickable="true"
                        android:onClick="pickImage3"/>
                    <Button
                        android:id="@+id/btnChoose3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginLeft="75dp"
                        android:textStyle="bold"
                        android:background="@drawable/capturepic"
                        android:clickable="true"
                        android:onClick="pickImage3"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:text="Submit"
                android:background="@drawable/button_background"
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>

</LinearLayout>